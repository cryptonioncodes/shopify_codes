{% assign collection = collections[section.settings.collection] %}

<h2>
  <span>{{ section.settings.heading }}</span> <span>{{ section.settings.heading2 }}</span>
</h2>
<ul>
  {% for product in collection.products limit: 4 %}
    <li>
      <img
        src="{{ product.featured_media.preview_image.src | product_img_url: '' }}"
        alt=""
        width=""
        height=""
        class="image-1"
      >
      <img
        src="{{ product.images.last | img_url: '' }}"
        alt="{{ product.images.last.alt | escape }}"
        alt=""
        width=""
        height=""
        class="image-2"
      >

      <a href="{{ product.url }}">Quick Add</a>

      <h3>{{ product.title | escape }}</h3>
      <p>{{ product.price | money }}</p>
    </li>
  {% endfor %}
</ul>

{% schema %}
{
  "name": "Shopify Product Loop By Collections",
  "settings": [
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },

    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "heading2",
      "label": "Heading 2"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "Shopify Product Loop By Collections",
      "category": "custom"
    }
  ]
}
{% endschema %}

